    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./api/dist",
      "rootDir": "./api",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["api/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  