{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "types": ["node", "express"],
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["api/**/*"],
    "exclude": ["node_modules"]
  }
  